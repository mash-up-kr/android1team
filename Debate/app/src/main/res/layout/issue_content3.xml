<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#303030">

    <TextView
        android:layout_marginLeft="36dp"
        android:layout_marginTop="240dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="224dp"
        android:layout_height="46dp"
        android:id="@+id/topic"
        android:textColor="#ffffff"
        />

    <TextView
        android:layout_marginLeft="36dp"
        android:layout_marginTop="21dp"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="토론 기간" />

    <LinearLayout
        android:layout_marginTop="9dp"
        android:layout_marginLeft="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:textSize="12sp"
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_date"
            />

        <TextView
            android:textSize="12sp"
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            />

        <TextView
            android:textSize="12sp"
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_date"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#505050"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <Button
android:layout_marginLeft="70dp"
            android:layout_marginTop="25.3dp"
            android:layout_width="35.1dp"
            android:layout_height="35.1dp"
            android:background="@drawable/like_before"

            android:id="@+id/issue_agree_btn"/>

        <Button
            android:layout_marginTop="25.3dp"
            android:layout_marginLeft="90dp"
            android:layout_width="35.1dp"
            android:layout_height="35.1dp"
            android:background="@drawable/hate_before"

            android:id="@+id/issue_degree_btn"/>


    </LinearLayout>

    <Button
        android:layout_marginTop="3.5dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="의견보기"
        android:textSize="15sp"
        android:id="@+id/search_reply_btn"/>
    <Button
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="의견작성하기"
        android:textSize="15sp"
        android:id="@+id/write_reply_btn"/>
</LinearLayout>
