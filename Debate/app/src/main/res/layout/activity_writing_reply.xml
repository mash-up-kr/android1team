<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.co.mash_up.debate.Writing_reply"
    android:orientation="vertical"
    android:background="#f2f2f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:background="#ffffff">



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="브렉시트, 영국의 EU 탈퇴 당신은? 찬성? 반대?"
        />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#ffffff"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <Button
            android:layout_marginLeft="70dp"
            android:layout_marginTop="25.3dp"
            android:layout_width="35.1dp"
            android:layout_height="35.1dp"

            android:background="@drawable/like_before"
            android:id="@+id/issue_agree_btn">



        </Button>

        <Button
            android:layout_marginTop="25.3dp"
            android:layout_marginLeft="90dp"
            android:layout_width="35.1dp"
            android:layout_height="35.1dp"
            android:background="@drawable/hate_before"

            android:id="@+id/issue_degree_btn"/>


    </LinearLayout>

<EditText
    android:background="#ffffff"
    android:layout_marginTop="9.1dp"
    android:layout_marginLeft="19dp"
    android:layout_marginRight="23dp"
    android:layout_width="290dp"
    android:layout_height="300dp" />

    <Button

        android:background="#ffffff"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textSize="15sp"
        android:id="@+id/write_reply_btn"/>

</LinearLayout>
